<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Tony Stark">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input id="gender-male" type="radio" name="gender" value="Male">
                <label for="gender-male" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input id="gender-female" type="radio" name="gender" value="Female">
                <label for="gender-female" class="radio-label">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input id="status-active" type="radio" name="status" value="Active">
                <label for="status-active" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input id="status-in-active" type="radio" name="status" value="InActive">
                <label for="status-in-active" class="radio-label">InActive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>